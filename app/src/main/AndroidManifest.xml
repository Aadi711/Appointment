<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appointment">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"

        android:theme="@style/Theme.Appointment"
        tools:replace="android:theme">
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:theme="@style/Theme.Appointment.NoActionBar"
            android:exported="true" />
        <activity
            android:name=".activities.SignInActivity"
            android:exported="true"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.HelpActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.ConfirmationActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.EmployeeProfileActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.EmployeeActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.PrivacyPolicyActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.PersonalDetailsActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/Theme.Appointment.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OtpActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.Appointment.NoActionBar" />
    </application>

</manifest>