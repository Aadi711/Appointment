<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:camomile="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/loader_layout"
    android:layout_height="match_parent">

    <com.gmail.samehadar.iosdialog.CamomileSpinner
        android:id="@+id/loader_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        camomile:duration="120"
        camomile:layout_constraintBottom_toBottomOf="parent"
        camomile:layout_constraintEnd_toEndOf="parent"
        camomile:layout_constraintStart_toStartOf="parent"
        camomile:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>